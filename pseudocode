function get_random_word:
    create empty dictionary named "target_words"
    open file "target_words.txt"
    for each line "word" in the file:
        remove leading and trailing whitespaces from "word"
        add "word" as a key to "target_words" dictionary
    close file "target_words.txt"
    convert "target_words" keys to a list named "target_words_keys"
    choose a random word from "target_words_keys" and assign it to "target_word"
    return "target_word"

call function get_random_word and assign its result to "answer"

